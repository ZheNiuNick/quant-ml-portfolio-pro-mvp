{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "git lfs install && git lfs pull && pip install -r zhe_trading_strategy/requirements.txt"
  },
  "deploy": {
    "startCommand": "bash zhe_trading_strategy/start.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

